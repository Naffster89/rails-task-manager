<h1>New Task</h1>

<%= form_with model: @task, local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </div>

  <div>
    <%= form.label :details %><br>
    <%= form.text_area :details %>
  </div>

  <div>
    <%= form.label :completed %><br>
    <%= form.check_box :completed %>
  </div>

  <div>
    <%= form.submit "Create Task", class: "btn btn-gradient" %>
  </div>
<% end %>
